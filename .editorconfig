# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Windows-style newlines
end_of_line = cr

# Do not end file with a single new line.
insert_final_newline = false
charset = utf-8

# Don't leave hanging whitespace at the end of the lines.
trim_trailing_whitespace = true
indent_style = tab
indent_size = 1

[*.admx]
indent_stype = space
indent_size = 4
